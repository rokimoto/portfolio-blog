<%= form_for @post do |f| %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :description, "Tagline" %>
  <%= f.text_field :description, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control", rows: "20"%>
</div>

<div class="form-group">
  <%= f.label :picture, "Photo" %>
  <%= f.file_field :picture, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :tag_list, "Tags (seperated by commas)" %>
  <%= f.text_field :tag_list, class: "form-control", value: @post.tag_list.to_s, data: {autocomplete_source: categories_path} %>
</div>

<div class="form-group">
  <%= f.submit "Send" %>
</div>

<% end %>