<header class="header row">
<%= link_to posts_path do %><div class="logo"></div><% end %>

<ul class="navbar">
  <li class="nav-item"><%= link_to "Blog", posts_path %></li>
  <li class="nav-item"><%= link_to "About", about_path %></li>
  <li class="nav-item"><%= link_to "Contact", contacts_new_path %></li>
</ul>

<% if current_user %>
  <div class="dropdown logged-in">
    <div id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= image_tag "torso.svg" %><%= current_user.name %>
      <span class="caret"></span>
    </div>
    <ul class="dropdown-menu" aria-labelledby="dLabel">
        <li><%= link_to "Add Entry", new_post_path %></li>
        <li><%= link_to "Logout", logout_path, method: :delete %></li>
    </ul>
  </div>
<% end %>

</header>